# Prompt Governor - Environment Configuration
# =============================================================
# Copy this file to .env and fill in your actual API keys
# DO NOT commit .env to git - it contains sensitive credentials
# =============================================================

# OpenAI API Configuration
# ------------------------
# Used for direct OpenAI model access (GPT-4, GPT-4o, etc.)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenRouter API Configuration
# ---------------------------
# Used for accessing models through OpenRouter (Anthropic, Google, etc.)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here

# Application Configuration
# -------------------------
# Host to bind the FastAPI server (default: 0.0.0.0 for Docker)
APP_HOST=0.0.0.0

# Port for the FastAPI server (default: 8000)
APP_PORT=8000

# Log level (DEBUG, INFO, WARNING, ERROR)
# DEBUG for development, INFO for production
LOG_LEVEL=INFO

# Data Storage Paths
# ------------------
# Base path for all JSON data storage
# In Docker, this should match the volume mount
DATA_DIR=./data

# Path for document storage (PDFs, text files)
DOCUMENTS_DIR=./documents

# Path for ground truth JSON files
GROUND_TRUTH_DIR=./ground_truth

# Path for OCR and intermediate cache files
CACHE_DIR=./cache

# Feature Flags
# -------------
# Enable/disable caching of API responses (default: true)
ENABLE_CACHE=true

# Enable/disable OpenRouter cost tracking (default: true)
TRACK_COSTS=true

# API Request Configuration
# -------------------------
# Maximum timeout for API calls in seconds (default: 120)
API_TIMEOUT_SECONDS=120

# Maximum retries for failed API calls (default: 3)
API_MAX_RETRIES=3

# Rate limiting - requests per minute (default: 60)
RATE_LIMIT_PER_MINUTE=60

# Development Settings
# --------------------
# Enable hot reload for development (default: false)
RELOAD=false

# Allow CORS for frontend development (default: true)
CORS_ENABLED=true

# CORS origin for frontend (default: * for development)
CORS_ORIGINS=*
